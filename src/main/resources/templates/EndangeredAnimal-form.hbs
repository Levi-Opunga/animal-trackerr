{{#partial "content"}}
    <form action="/post-endangered"  style="border: 4px solid white;" class="col-md-10 offset-1" method="post">
        <div class="col class form-group">
            <label for="name">Animal Name</label>
            <input class="form-control form-group form-control-lg" required name="name" id="name"
                   type="text" placeholder="Enter the Animal name">
        </div>

        <div class="col">
            <div class="form-group pt-3 ">
                <label for="age">Age Selection</label>
                <select class="form-control form-control-lg" required name="age"
                        id="age">
                    {{#each ages}}
                        <option class="text-dark   text-uppercase" value="{{this}}">{{this}}</option>

                    {{/each}}
                </select>
            </div>
        </div>

        <div class=" mt-3 ">
            <div class="form-group pt-3 ">
                <label for="healthStatus">Health Status Selection</label>
                <select class="form-control  form-control-lg" required name="healthStatus"
                        id="healthStatus">
                    {{#each healthStatuses}}
                        <option class="text-dark   text-uppercase" value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class=" mt-3">
            <div class="form-group pt-3">
                <label for="gender">Gender Selection</label>
                <select class="form-control form-control-lg" required name="gender"
                        id="gender">
                    {{#each genders}}
                        <option class="text-dark   text-uppercase" value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class=" pt-4 pb-4">
            <button type="submit" class="btn btn-light ">Add Animal</button>
        </div>


    </form>
{{/partial}}
{{>layout.hbs}}