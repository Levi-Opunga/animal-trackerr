{{#partial "content"}}
    <form action="post-sighting" method="post" style="border: 4px solid white;" class="col-md-10 offset-1">
        <div class="text-center container pt-5">
            <div class="">
                <div class="col">
                    <label for="hero-name">Animal Name</label>
                    <input class="form-control form-group form-control-lg" required name="animal-name" id="hero-name"
                           type="text" placeholder="Enter the Animal name">
                </div>


                <div class="col">
                    <div class="form-group pt-3">
                        <label for="exampleFormControlSelect1">Age Selection</label>
                        <select class="form-control form-control-lg" required name="squad-selection"
                                id="exampleFormControlSelect1">
                            {{#each animalTypes}}
                                <option class="text-dark   text-uppercase" value="{{this}}">{{this}}</option>

                            {{/each}}
                        </select>
                    </div>

                </div>

                <div class="col mt-3 ">

                    <label for="latitude">Latitude</label>
                    <input class="form-control form-group form-control-lg" name="latitude" required id="latitude"
                           type="number" placeholder="Enter the Animal name">
                </div>
                <div class="col mt-3">
                    <label for="longitude">Longitude </label>
                    <input class="form-control form-group form-control-lg" name="longitude" required id="longitude"
                           type="number" placeholder="Enter the Animal name">
                </div>
                <div class=" pt-4 pb-4">
                    <button type="submit" class="btn btn-light ">Add Sighting</button>
                </div>
            </div>
        </div>
    </form>
{{/partial}}
{{>layout.hbs}}